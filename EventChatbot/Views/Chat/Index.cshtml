@{Layout= "_Layout";}
@model User


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="\lib\bootstrap\dist\css\bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link href="css\chat.css" rel="stylesheet">
   

    <title>Chat with our bot! </title>
</head>
<body>
@section ModifyPreferences{
  <i class="bi bi-pencil-square h3" data-bs-target="#modal1" data-bs-toggle="modal"></i>
}
<form asp-action="Index" method="post">
  <!-- First modal, take username -->
      <div class="modal" id="modal1" aria-hidden="true" aria-labelledby="modal1" tabindex="-1" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered modal-xl">
          <div class="modal-content">
            
            <div class="modal-body d-flex flex-column justify-content-between">
                
              <h1 style="text-align: center; ">What should we call you?</h1>
    
              <div class="d-flex justify-content-center flex-grow-1">
                <input class="form-control form-control-lg" type="text" asp-for="Name">

              </div>
            </div>
            <span style="margin: auto;">
                <i class="bi bi-circle-fill h6"></i>
                <i class="bi bi-circle h6"></i>
                <i class="bi bi-circle h6"></i>
                <button type="button" class="btn" data-bs-target="#modal2" data-bs-toggle="modal">
                    <i class="bi bi-caret-right h2" id="left-arrow">
                    </i>
                </button>
                
              
              </span>
          </div>
        </div>
      </div>
  <!-- Second modal, take user interests -->
      <div class="modal" id="modal2" aria-hidden="true" aria-labelledby="modalLabel2" tabindex="-1" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered modal-xl modal-dialog-scrollable">
          <div class="modal-content">
            
            <div class="modal-body">
              <h1>What do you like?</h1>
              <input type="checkbox" class="btn-check" id="Technology" autocomplete="off" name="Interests" value="Technology">
              <label class="btn btn-lg interest btn-primary" for="Technology">Technology</label>
              <input type="checkbox" class="btn-check" id="Arts" autocomplete="off" name="Interests" value="Arts">
              <label class="btn btn-lg interest btn-primary" for="Arts">Arts</label>
              <input type="checkbox" class="btn-check" id="Science" autocomplete="off" name="Interests" value="Science">
              <label class="btn btn-lg interest btn-primary" for="Science">Science</label> 
              <input type="checkbox" class="btn-check" id="PoliticalScience" autocomplete="off" name="Interests" value="PoliticalScience">
              <label class="btn btn-lg interest btn-primary" for="PoliticalScience">Political Science</label> 
              <input type="checkbox" class="btn-check" id="Economy" autocomplete="off" name="Interests" value="Economy">
              <label class="btn btn-lg interest btn-primary" for="Economy">Economy</label>
              <input type="checkbox" class="btn-check" id="Business" autocomplete="off" name="Interests" value="Business">
              <label class="btn btn-lg interest btn-primary" for="Business">Business</label>
              <input type="checkbox" class="btn-check" id="HealthSciences" autocomplete="off" name="Interests" value="HealthSciences">
              <label class="btn btn-lg interest btn-primary" for="HealthSciences">Health Sciences</label>
              <input type="checkbox" class="btn-check" id="Sports" autocomplete="off" name="Interests" value="Sports">
              <label class="btn btn-lg interest btn-primary" for="Sports">Sports</label>
              <input type="checkbox" class="btn-check" id="Theology" autocomplete="off" name="Interests" value="Theology">
              <label class="btn btn-lg interest btn-primary" for="Theology">Theology</label>
              <input type="checkbox" class="btn-check" id="Engineering" autocomplete="off" name="Interests" value="Engineering">
              <label class="btn btn-lg interest btn-primary" for="Engineering">Engineering</label>


            </div>
            <span style="margin: auto;">
                <button type="button" class="btn" data-bs-target="#modal1" data-bs-toggle="modal">
                    <i class="bi  bi-caret-left h2"></i>
                </button>
                <a data-bs-target="#modal1" data-bs-toggle="modal">
                    <i class="bi bi-circle-fill h6"></i>
                </a>
                <i class="bi bi-circle-fill h6"></i>
                <i class="bi bi-circle h6"></i>
                <button type="button" class="btn" data-bs-target="#modal3" data-bs-toggle="modal">
                    <i class="bi bi-caret-right h2" id="left-arrow">
                    </i>
                </button>
              </span>
          </div>
        </div>
      </div>
  <!-- Third modal,# take user availability -->
      <div class="modal modal-xl" id="modal3" tabindex="-1" aria-labelledby="modal3" aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-scrollable">
          <div class="modal-content">
            
            <div class="modal-body">
              <h1>When are you free?</h1>
              <div class="container d-flex align-items-center justify-content-center">
              <div class="row w-100 justify-content-center row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-4 row-cols-xl-4 " >
                 
               
                  <div class="col-sm-6 col-md-4 col-lg-3 d-flex justify-content-center align-items-center text-center">
                    <div>
                      <h3>Monday</h3>
