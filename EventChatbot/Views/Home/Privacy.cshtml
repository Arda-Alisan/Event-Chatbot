        background-image: url('https://www.york.ac.uk/media/philosophy/images/ma-applied-ethics-hero.jpg'); /* Replace with your image URL */
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .container {
        max-width: 80%;
