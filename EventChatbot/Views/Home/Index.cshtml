@{
    ViewData["Title"] = "Home Page";
}

<style>
    .header {
        border: 2px solid #17a2b8; /* Blue border like the button color */
        background-color: #17a2b8; /* Background color same as btn-info */
        color: white; /* Text color */
        padding: 20px; /* Some padding */
        margin-bottom: 20px; /* Optional: space below the header */
    }

   
</style>
<div class="text-center">
    <div class="header">
        <h1 class="display-5">Event and Activity Recommender</h1>
    </div>

    <div class="d-flex vh-100">
        <!-- Left Side (Calendar) -->
        <div class="d-flex flex-column align-items-center border flex-fill" id="calendar-side">
            <!-- Takvim -->
            <div class="calendar-container">
                <div class="calendar-header">
                    <button id="prev-month">Previous</button>
                    <span id="month-name"></span>
                    <button id="next-month">Next</button>
                </div>
                <table class="calendar-table">
                    <thead>
                        <tr>
                            <th>Monday</th>
                            <th>Tuesday</th>
                            <th>Wednesday</th>
                            <th>Thursday</th>
                            <th>Friday</th>
                            <th>Saturday</th>
                            <th>Sunday</th>
                        </tr>
                    </thead>
                    <tbody id="calendar-body"></tbody>
                </table>
            </div>

            <!-- Özel gün ekleme formu -->
            <div class="add-special-day mt-3">
                <input type="date" id="special-date" class="form-control mb-2" />
                <input type="text" id="special-label" class="form-control mb-2" placeholder="Special day description" />
                <button id="add-special-day" class="btn btn-info">Add Special Day</button>
            </div>
        </div>

        <!-- Right Side (Events Area) -->
        <div class="d-flex flex-column border flex-fill" id="events-side">
            <div class="d-flex flex-column align-items-center justify-content-center">
                <h2>Upcoming Events</h2>
                <div id="events-list" class="border p-3" style="width: 90%; height: 80%; overflow-y: auto;">
                    <!-- Etkinlikler buraya dinamik olarak eklenecek -->
                    <p>No events yet. Add special days to populate events here.</p>
                </div>
            </div>
        </div>
    </div>
</div>
                    <!-- Carousel Inner with black background -->
                    <div class="carousel-inner  flex-fill d-flex align-items-center" style=" height: 100%;">
                        <div class="carousel-item active">
                            <h1 class="text-black">Event 1</h1>
                            <a class="btn btn-info" href="#" role="button" style="color:white; background-color: #17a2b8;">Details</a>
                        </div>
                        <div class="carousel-item">
                            <h1 class="text-black">Event 2</h1>
                        </div>
                        <div class="carousel-item">
                            <h1 class="text-black">Event 3</h1>
                        </div>
                    </div>

                    <!-- Carousel Controls -->
                    <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true" style="background-color : black;"></span>
                        <span class="sr-only"></span> <!-- Added descriptive text -->
                    </a>
                    <a class="carousel-control-next" href="#myCarousel" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true" style="background-color : black;"></span>
                        <span class="sr-only"></span> <!-- Added descriptive text -->
                    </a>
                </div>
            </div>

            <!-- Proceed Button -->
            <div class="d-flex align-items-center justify-content-center border flex-fill">
                <a class="btn btn-info" role="button" style="color:white; background-color: #17a2b8;" asp-action="Index" asp-controller="Chat">Proceed to Chatbot</a>
            </div>
        </div>
    </div>
</div>

